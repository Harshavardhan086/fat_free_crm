.remote
  %h3 Creating Order for #{@account.name}
  = form_for(@order, url: create_order_from_account_path,authenticity_token: true ,:multipart => true, :remote => true) do |f|
    = link_to_close edit_account_path(@account)

    = hidden_field_tag :from_accounts, "true"
    = hidden_field_tag :user_id, current_user.id
    = hidden_field_tag :account_id, @account.id
    = f.error_messages :object_name => t('order')
    -#= render "account"
    = render "orders/lead"

    .section
      %table
        %tr
          %td
            .label Status
            = f.select :status, Setting.unroll(:order_status), { :selected => (@order.status || "new").to_sym }, { :style => "width:160px" }

          %td= spacer
          %td
            .label.req State of Incorporate
            = f.select :state_of_incorporate, @us_states , {:selected => (@order.state_of_incorporate || ""), :include_blank => true}, {class: "business_rule_filter",:required => true, :style => "width:160px" }
          %td= spacer
          %td
            .label.req Request Type
            = f.select :request_type, Setting.unroll(:order_request_type), {:selected => (@order.request_type || ""), :include_blank => true}, {class: "business_rule_filter",:required => true, :style => "width:160px" }

    = render "orders/opportunity"
