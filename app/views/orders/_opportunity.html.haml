= fields_for(@opportunity) do |o|
  = o.hidden_field :user_id
  = o.hidden_field :id
  -#= o.hidden_field :order_id
  -#= o.hidden_field :access
  -#= o.hidden_field :assigned_to

  -#.subtitle #{t :opportunity}
  .section
    %small
      -##{t(:create_opp_for_contact)}
    -#%table
    -#  %tr
    -#    %td
    -#      .label #{t :stage}:
    -#      = o.select :stage, Setting.unroll(:opportunity_stage), { :selected => @opportunity.stage ? @opportunity.stage.to_sym : nil }, { :style => "width:160px" }

    %table
      %tr
        %td
          .label.req #{t :amount} #{t :currency}:
          = o.text_field :amount, :class => "opportunity_amount",:required => true, :style => "width:110px; text-align:right;"
        %td= spacer
        %td
          .label #{t :other_amount} #{t :currency}:
          = o.text_field :other_amount, :class => "opportunity_amount", :style => "width:110px; text-align:right;"
        %td
          .label #{t :discount} #{t :currency}:
          = o.text_field :discount, :class => "opportunity_amount", :style => "width:110px; text-align:right;"

    %table
      %tr
        %td
          .label #{t :total} #{t :currency}:
          = o.text_field :total_amount, :style => "width:110px; text-align:right;"
