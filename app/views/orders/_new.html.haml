= simple_form_for(@order, :html => one_submit_only,authenticity_token: true ,:multipart => true, :remote => true) do |f|
  = link_to_close new_order_path

  = hidden_field_tag :from_accounts, "false"
  = f.hidden_field :user_id
  = f.error_messages :object_name => t('order')
  = render "account"
  -#= render "lead"

  .section
    %table
      %tr
        %td
          .label Status
          = f.select :status, Setting.unroll(:order_status), { :selected => (@order.status || "new").to_sym }, { :style => "width:160px" }

        %td= spacer
        %td
          .label.req State of Incorporate
          = f.select :state_of_incorporate, @us_states , {:selected => (@order.state_of_incorporate || ""), :include_blank => true}, { class: "business_rule_filter",:style => "width:160px" }
        %td= spacer
        %td
          .label.req Request Type
          = f.select :request_type, Setting.unroll(:order_request_type), {:selected => (@order.request_type || ""), :include_blank => true}, {:required => true,class: "business_rule_filter", :style => "width:160px" }
  .section
    %table
      %tr
        %td
          .label.req #{t :assign_to}:
          = f.select :assigned_to, @sales_managers, {:selected => (@order.assigned_to || "Unassigned")}, { :style => "width:160px" }
  = render "opportunity"
  -#= render "task"
  %h3 Add Files
  #attachments
    = f.fields_for :order_files do |of|
      = render "order_file_fields", :f => of
    .links
      = link_to_add_association "Add File" , f, :order_files
  #required_files
  .buttonbar
    - if Setting.compound_address
      = f.submit t(:create_order), :onclick => "crm.clear_all_hints()"
    - else
      = f.submit t(:create_order)
    #{t :or}
    = link_to_cancel new_order_path