#edit_business_rule
%table
  %tbody
    %tr
      %td State
      %td Request Type
      %td Amount
      %td Documents
    - @all_business_rules.each do |br|
      %tr{:id => "business_rule_#{br.id}"}
        %td
          = br.state_of_incorporate
        %td
          = br.request_type
        %td
          = br.amount
        %td
          - if !br.business_rule_files.blank?
            - br.business_rule_files.each do |brf|
              = brf.file_name
        %td
          = link_to "Edit","#", :class => "rule", :id => br.id