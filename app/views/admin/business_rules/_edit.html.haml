.remote
  = form_for([:admin, @business_rule], :html => one_submit_only, :remote => true) do |f|
    = link_to_close edit_admin_business_rule_path(@business_rule)
    = f.error_messages
    #create_br_error
    -#= render :partial => "top_section", :locals => { :f => f }
    .section
      %table
        %tr
          %td
            .label.req State of Incorporate
            = f.select :state_of_incorporate, @us_states , {:selected => (@business_rule.state_of_incorporate || ""), :include_blank => true}, { :style => "width:160px" }
          %td= spacer
          %td
            .label.req Request Type
            = f.select :request_type, Setting.unroll(:order_request_type), {:selected => (@business_rule.request_type || ""), :include_blank => true}, {:required => true, :style => "width:160px" }
    .section
      %table
        %tr
          %td
            .label.req #{t :amount} #{t :currency}:
            = f.text_field :amount,:required => true, :style => "width:110px; text-align:right;"
          %td= spacer
          %td
            .label Web
            = f.text_field :web, :style => "width:110px; text-align:right;"

    %h3 Add Files
    #attachments
      = f.fields_for :business_rule_files do |of|
        -#= render "business_rule_file_fields", :f => of
      .links
        = link_to_add_association "add" , f, :business_rule_files

    %h3 Files Added
    - if !@attachments.nil?
      -@attachments.each do |a|
        .attached_file{:id => "attached_file_#{a.id}"}
          = link_to "#{a.file_name}", a.attachment.url,:id => "#{a.id}", :target => "_blank"
          = link_to "x", "#",:id => "#{a.id}",:class=> "remove_br_attachment"
          %br

    .buttonbar
      = f.submit t(:save_business_rule)
      or
      = link_to_cancel edit_admin_business_rule_path(@business_rule)